@{

    <h1>Mantenimiento de Equipos</h1>
    <br />
    <form asp-action="CrearEquipos">
        @*Inicio del Formulario*@
        <div class="form-group row mb-4">

            @*NOMBRE*@

            <div class="row mt-3">
                <div class="col-sm-2">
                    <label>
                        Nombre
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.TextBox("nombre", "", new { @class = "form-control" })
                </div>
                <div class="col-sm-2">
                    @Html.Label("lblDescripcion", "Descripción")
                </div>
                <div class="col-sm-4">
                    @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder = "Ingrese la descripción" })
                </div>
            </div>
            @* FIN NOMBRE*@

            @*TIPO DE EQUIPO*@
           
            <div class="row mt-3">
                <div class="col-sm-2">
                    <label>
                        Tipo de equipo
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.DropDownList("tipo_equipo_id", ViewData["listadotipo"] as SelectList, "Seleccione un Tipo", new { @class = "form-control" })
                </div>
            </div>
            @*FIN TIPO DE EQUIPO*@


            <div class="row mt-3">
                @*MARCAS*@

                <div class="col-sm-2">
                    <label>
                        Marcas
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new { @class = "form-control" })
                </div>
                @* FIN MARCAS*@

                @*MODELO*@
                <div class="col-sm-2">
                    <label>
                       Modelo
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.TextBox("modelo", "", new { @class = "form-control" })
                </div>
                @*FIN MODELO*@


            </div>

            <div class="row  mt-3">
                @*ANIO*@

                <div class="col-sm-2 ">
                    <label>
                        Año de compra
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.TextBox("anio_compra", "", new { @class = "form-control" })
                </div>

                @*FIN ANIO*@

                @*COSTO*@
                <div class="col-sm-2 ">
                    <label>
                        Costo
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.TextBox("costo", "", new { @class = "form-control" })
                </div>
                @*FIN COSTO*@

            </div>

            <div class="row  mt-3">
                @*VIDA*@
                <div class="col-sm-2 ">
                    <label>
                        Vida Útil
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.TextBox("vida_util", "", new { @class = "form-control" })
                </div>
                @*FIN VIDA*@

                @*ESTADO*@

                <div class="col-sm-2">
                    <label>
                        Estado de Equipo
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.DropDownList("estados", ViewData["listadoEstado"] as SelectList, "Seleccione un Estado", new { @class = "form-control" })
                </div>
                @*FIN ESTADO*@


            </div>

            @*TABLA*@

            <div class="form-group row mb-4">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-4" style="margin-top: 20px;">
                    <input type="submit" class="btn-primary" value="Guardar" />
                </div>
            </div>
            <table class="table table-sm">
                <thead>
                    <tr class="text-md-center">
                        <th>Equipo</th>
                        <th>Descripción</th>
                        <th>Marca</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadodeequipo"])
                    {
                        <tr>
                            <td>@equipo.nombre</td>
                            <td>@equipo.descripcion</td>
                            <td>@equipo.marca_nombre</td>
                        </tr>
                       
                    }
                </tbody>
            </table>
            @* FIN TABLA*@



        </div>


        @*Fin del Formulario*@
    </form>

}
