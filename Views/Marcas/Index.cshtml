@model IEnumerable<MVC_practica09_EsmeraldaGarcia.Models.marcas>

@{
    ViewData["Title"] = "Tablita";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estados)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.marca_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.marca_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.marca_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
